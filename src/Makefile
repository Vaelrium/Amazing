NAME = step1

ML =	gate.ml	\
	case.ml	\
	step1.ml

MLI =	gate.mli	\
	case.mli


CMI = $(MLI:.mli=.cmi)
CMO = $(ML:.ml=.cmo)
CMX = $(ML:.ml=.cmx)

OCAMLDPE = ocamldep
CAMLFLAGS = -w Aelz -warn-error A
OCAMLC = ocamlc $(CAMLFLAGS)
OCAMLOPT = ocamlopt $(CAMLFLAGS)

all:		$(CMI) $(NAME)

byte:		$(CMI) $(NAME).byte


$(NAME):	$(CMX)
		@$(OCAMLOPT) -o $@ $(CMX)

$(NAME).byte:	$(CMO)
		@$(OCAMLC) -o $@ $(CMO)

%.cmx:		%.ml
		@$(OCAMLOPT) -c $<

%.cmo:		%.ml
		@$(OCAMLC) -c $<

%.cmi:		%.mli
		@$(OCAMLC) -c $<



################################################################################
