NAME = exemple

ML =	assistants.ml	\
	main.ml

MLI =	assistants.mli


CMI = $(MLI:.mli=.cmi)
CMO = $(ML:.ml=.cmo)
CMX = $(ML:.ml=.cmx)

OCAMLDPE = ocamldep
CAMLFLAGS = -w Aelz -warn-error A
OCAMLC = ocamlc $(CAMLFLAGS)
OCAMLOPT = ocamlopt $(CAMLFLAGS)

all:		.depend $(CMI) $(NAME)

byte:		.depend $(CMI) $(NAME).byte


$(NAME):	$(CMX)
		@$(OCAMLOPT) -o $@ $(CMX)

$(NAME).byte:	$(CMO)
		@$(OCAMLC) -o $@ $(CMO)

%.cmx:		%.ml
		@$(OCAMLOPT) -c $<

%.cmo:		%.ml
		@$(OCAMLC) -c $<

%.cmi:		%.mli
		@$(OCAMLC) -c $<

.depend:
		@/bin/rm -f .depend
		@$(OCAMLDPE) $(MLI) $(ML) > .depend




################################################################################
